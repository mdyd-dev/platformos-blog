{% assign posts_required_size = 3 %}

{%- query_graph 'modules/dashboard_blog/get_blog_posts', result_name: g, published_at_lte: today, per_page: posts_required_size, blog_instance_id: blog_instance.id, tags: related_tags, except_ids: except_id -%}

{% assign related_posts = g.customizations.results %}
{% assign related_posts_size = related_posts.size %}
{% assign posts_required_size = posts_required_size | minus: related_posts_size %}

{% unless posts_required_size == 0 %}
  {%- query_graph 'modules/dashboard_blog/get_blog_posts', result_name: g, published_at_lte: today, per_page: posts_required_size, blog_instance_id: blog_instance.id, except_ids: except_id -%}
  {% assign other_posts = g.customizations.results %}
  {% assign related_posts = related_posts | concat: other_posts %}
{% endunless %}

{% if related_posts.size > 0  %}
  <section class="o-section o-section--fill-grey">

    <div class="o-container">

      {% if section_title %}
        <div class="o-section__title">{{ section_title }}</div>
      {% endif %}

      {%- include 'modules/dashboard_blog/blog/posts-list',
        is_grid_view: true,
        grid_view_cols: 3,
        feature_first: false,
        posts: related_posts,
        instance_slug: blog_instance.slug
      -%}

    </div>

  </section>
{% endif %}
